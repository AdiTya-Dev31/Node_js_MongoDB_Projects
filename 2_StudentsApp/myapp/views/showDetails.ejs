<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!-- CSS -->
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
  </head>
  <body>
    <h1 class="mb-5 p-3 text-center text-white bg-dark"><%= title %></h1>
    
    <form action="/search/" method="POST" class="my-5 px-5">
      <div class="row">
        <div class="col">
          <input type="text" class="form-control" placeholder="Student Name" name="fltrName">
        </div>
        <div class="col">
          <input type="text" class="form-control" placeholder="Roll No" name="fltrRollNo">
        </div>
        <div class="col">
          <input type="text" class="form-control" placeholder="Class" name="fltrClass">
        </div>
        <div class="col">
          <input type="submit" type="button" class="btn btn-secondary form-control" value="Search">
        </div>
      </div>
    </form>

    <a href="/" class="btn btn-info mb-2 mx-5">Enter new student</a>

    <div class="px-5 pt-2">
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Class</th>
            <th scope="col">Roll No</th>
            <th scope="col">Branch</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if(records.length > 0){ 
                records.forEach(function(row){ %>
          <tr>
            <td><%= row.name %></td>
            <td><%= row.class %></td>
            <td><%= row.rollNo %></td>
            <td><%= row.branchCode %></td>
            <td><a class="btn btn-success btn-xs p-2 mx-1" href="/edit/<%= row._id %>"><i class="fa fa-pencil" aria-hidden="true"></i></a> <a class="btn btn-danger p-2 mx-1" href="/delete/<%= row._id %>"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
          </tr>
          <% })
          }
          else{ %>
            <tr>
              <td colspan="4">No record found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

  </body>
</html>
